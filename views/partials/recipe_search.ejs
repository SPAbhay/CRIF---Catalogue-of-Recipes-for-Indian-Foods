<% for(let i=0;i<resp['recipes'].length;i++) {  %>
    <% var id='/recipe?id='+resp['recipes'][i]['recipe_id'];  %>
    <a id="<%= id%>" href="<%=id%>" style="color: inherit; text-decoration: inherit">
        <div class="row">
            <div class="item col-lg-3" ><img style="width: 100%;height: 100%;object-fit: cover;overflow: hidden;" src="<%- resp['recipes'][i]['image'] %>"></div>

            <div class="data col">
                <h3 class="recipe-name"><%= resp['recipes'][i]['name'] %></h3>
                <span class="point" style="margin-right: 10px;"><strong>Servings: </strong><%= resp['recipes'][i]['servings'] %></span>
                <span class="time" style="margin-right: 10px"><strong>Cooking Time: </strong> <%= resp['recipes'][i]['cooking_time'] %> Minutes</span>
                <p class="desc">
                    <%= resp['recipes'][i]['description'] %>
                </p>
            </div>
        </div>
    </a>
<%}%>
